#include<stdio.h>
main()
{
        int n,i,*ptr,sum=0;
	        printf("\nEnter number of elements :");
		        scanf("%d",&n);
			        ptr=(int*)calloc(n,sizeof(int));
				        printf("Enter the elements of array : ");
					        for(i=0;i<n;i++)
						        {       scanf("%d",ptr+i);
							                sum+=*(ptr+i);
									        }
										        printf("sum=%d\n",sum);
											        free(ptr);
												}
