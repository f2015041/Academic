#include <stdio.h>
#include <string.h>
void main()
{
    char a[]={"Sample String"},b[]={"ABCD"};
        int i=0,x=0,y=0,t=0,w=0,j;
	    while(a[i] != '\0')
	        {
		        i++;
			    }
			        while(b[i] != '\0')
				    {
				            t++;
					        }
						    char c[i+t];
						        for(x=0;x<i;x++)
							    {
							            c[j]=a[j];
								        }
									    for(y=x;y<i+t;y++)
									        {
										        
											        c[y]=b[w];
												        w++;
													    }
													        
														    printf("%s",c);
														    }


